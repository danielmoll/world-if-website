{
  "name": "@economist/world-if-website",
  "private": true,
  "version": "1.0.0",
  "description": "The World If website",
  "author": "The Economist (http://economist.com)",
  "license": "MIT",
  "repository": "git://github.com/the-economist-editorial/world-if-website.git",
  "homepage": "https://github.com/the-economist-editorial/world-if-website#readme",
  "bugs": "https://github.com/the-economist-editorial/world-if-website/issues",
  "main": "server.js",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "stage": 0
        }
      ]
    ]
  },
  "stats": {
    "build_number": "__dev__",
    "commit_id": "__dev__"
  },
  "config": {
    "analytics_code": "window.onload=function(){window.GoogleAnalyticsObject='ga';ga('create', 'UA-XXXXX-X', 'auto');ga('send', 'pageview')}",
    "lint_opts": "--ignore-path .gitignore",
    "server_assets_dir": "assets",
    "server_assets_uri": "assets",
    "server_root": ".",
    "server_port": 8080
  },
  "eslintConfig": {
    "extends": "strict/react"
  },
  "scripts": {
    "start": "node server.js",
    "watch": "nodemon -x \"npm run build; npm start | bunyan\" -i assets -i node_modules/ -e js,html,css",
    "clean": "rm assets/* && git checkout assets/favicon.ico",
    "build": "parallelshell \"#npm run build:assets\" \"npm run build:js\" \"npm run build:css\" \"npm run version\"",
    "build:js": "parallelshell \"npm run build:js:client\" \"npm run build:js:vendor\" \"npm run build:js:analyticsscript\" \"npm run build:js:inline\"",
    "build:js:analyticsscript": "json -f js-assets.json -IAe 'this.ga=\"/www.google-analytics.com/analytics.js\"'",
    "build:js:vendor": "browserify -r react -g envify -g uglifyify | hashmark -l 8 -m js-assets.json -n 0vendor.js 'assets/{hash}{ext}'",
    "build:js:client": "browserify `test \"$NODE_ENV\" != \"production\" && echo '-d'` -g envify -g uglifyify -x react client.js | hashmark -l 8 -m js-assets.json -n client.js 'assets/{hash}{ext}'",
    "build:js:inline": "echo [] > js-inline.json && npm run build:js:inline:analyticscode",
    "build:js:inline:analyticscode": "CONTENTS=$npm_package_config_analytics_code TYPE=\"js\" npm run push:inline",
    "build:css": "parallelshell \"npm run build:css:inline\" \"npm run build:css:client\"",
    "build:css:client": "postcss -u cssnext -u cssnano -u postcss-nesting index.css | hashmark -l 8 -m css-assets.json -n style.css 'assets/{hash}{ext}'",
    "build:css:inline": "echo [] > css-inline.json",
    "build:assets": "npm-assets .",
    "push:inline": "json -f ${TYPE}-inline.json -IAe \"this.push(process.env.CONTENTS)\"",
    "version": "json -f package.json -IAe \"this.stats.build_number='${CI_BUILD_NUMBER:-__dev__}';this.stats.commit_id='${CI_COMMIT_ID:-__dev__}'\"",
    "lint": "eslint $npm_package_config_lint_opts .",
    "serve": "npm run prestart && nodemon",
    "test": "exit 0; # no tests yet! npm run test:base -- -R tap",
    "test:base": "mocha -r babel/register -r @economist/component-testharness",
    "test:watch": "npm run test:base -- -wR min"
  },
  "dependencies": {
    "@economist/component-world-if-html": "^1.0.0",
    "@economist/connect-filter-jsonapi": "^1.0.1",
    "babel": "^5.5.8",
    "bunyan": "^1.4.0",
    "bunyan-middleware": "^0.2.0",
    "bunyan-request-logger": "^1.0.1",
    "compression": "^1.5.1",
    "connect": "^3.4.0",
    "connect-cache-manifest": "^0.2.2",
    "debug": "^2.2.0",
    "express-bunyan-logger": "^1.1.1",
    "npcp": "^0.1.0-2",
    "react": "^0.13.3",
    "serve-favicon": "^2.3.0",
    "st": "^0.5.4"
  },
  "devDependencies": {
    "@economist/component-testharness": "^1.0.0",
    "babelify": "^6.1.2",
    "browserify": "^11.0.0",
    "cssnano": "^2.0.3",
    "cssnext": "^1.8.0",
    "envify": "^3.4.0",
    "eslint": "^0.24.0",
    "eslint-config-strict": "^2.4.0",
    "eslint-plugin-filenames": "^0.1.1",
    "eslint-plugin-one-variable-per-var": "^0.0.3",
    "eslint-plugin-react": "^2.6.3",
    "hashmark": "^3.0.0",
    "json": "^9.0.3",
    "mocha": "^2.2.5",
    "nodemon": "^1.3.8",
    "npm-assets": "^0.1.0",
    "parallelshell": "^1.2.0",
    "postcss": "^4.1.15",
    "postcss-cli": "^1.5.0",
    "postcss-nesting": "^0.1.0",
    "pre-commit": "^1.0.10",
    "uglifyify": "^3.0.1"
  },
  "pre-commit": [
    "lint"
  ]
}
