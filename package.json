{
  "name": "@economist/world-if-website",
  "private": true,
  "version": "1.0.0",
  "description": "The World If website",
  "author": "The Economist (http://economist.com)",
  "license": "MIT",
  "repository": "git://github.com/the-economist-editorial/world-if-website.git",
  "homepage": "https://github.com/the-economist-editorial/world-if-website#readme",
  "bugs": "https://github.com/the-economist-editorial/world-if-website/issues",
  "main": "server.js",
  "files": [
    "*.js",
    "!src/*.(js|css)",
    "*.css",
    "assets/*",
    "!src/assets/*"
  ],
  "config": {
    "postcss": "-u postcss-import -u postcss-cssnext -u cssnano -u postcss-reporter",
    "lint_opts": "--ignore-path .gitignore",
    "server": {
      "favicon": "assets/favicon.ico",
      "port": 8080,
      "compression": true,
      "logger": {
        "name": "world-if-website"
      },
      "proxy": {
        "domain": "http://dev2-cms-worldin.economist.com/",
        "path": "contentasjson/"
      },
      "cache": {
        "ttl": 30000
      },
      "stats": {},
      "manifest": {
        "uri": "application.manifest",
        "directories": [
          {
            "directory": "assets",
            "uri": "assets",
            "only": "\\.(js|css|svg)$"
          }
        ]
      },
      "staticAssets": {
        "acceptWebp": true,
        "uri": "assets",
        "directory": "assets"
      }
    }
  },
  "babel": {
    "compact": false,
    "ignore": "node_modules",
    "presets": [
      "es2015-loose",
      "stage-0",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "strict",
      "strict-react"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-strict"
    ]
  },
  "scripts": {
    "prepare": "npm-run-all --serial prebuild:* build",
    "start": "([ \"$NODE_ENV\" != \"production\" ] && npm run prepare); node server.js",
    "clean": "rm assets.json && rm *.js && rm -rf assets",
    "prebuild": "echo {} > assets.json",
    "prebuild:assets": "npm-assets . && cp src/assets/* assets",
    "prebuild:babel": "babel src -d . --source-maps inline",
    "build": "npm-run-all --serial build:* version",
    "build:js": "npm-run-all --parallel build:js:*",
    "build:js:vendor": "browserify `test \"$NODE_ENV\" != \"production\" && echo '-d'` -g envify -g uglifyify -r react -r react-dom -r react/lib/ReactUpdates -r babel-polyfill | hashmark -l 8 -m assets.json -n vendor 'assets/{hash}.js'",
    "build:js:client": "browserify `test \"$NODE_ENV\" != \"production\" && echo '-d'` -g envify -g uglifyify -x react -x react-dom -x react/lib/ReactUpdates -x babel-polyfill client.js | hashmark -l 8 -m assets.json -n client 'assets/{hash}.js'",
    "build:css": "postcss $npm_package_config_postcss src/index.css | hashmark -l 8 -m assets.json -n style 'assets/{hash}.css'",
    "test": "exit 0; # no tests yet! npm run test:base -- -R tap",
    "test:base": "mocha",
    "test:watch": "npm run test:base -- -wR min",
    "version": "json -f package.json -IAe \"var stats = this.config.server.stats; stats.buildNumber='${CI_BUILD_NUMBER:-__dev__}';stats.commitId='${CI_COMMIT_ID:-__dev__}';stats.builtAt=new Date().toJSON()\"",
    "lint": "eslint $npm_package_config_lint_opts ."
  },
  "dependencies": {
    "@economist/component-404": "^4.0.0",
    "@economist/component-accordion": "^5.0.0",
    "@economist/component-ad-panel": "^2.2.0",
    "@economist/component-articletemplate": "^8.1.3",
    "@economist/component-cookie-message": "^4.0.0",
    "@economist/component-footer": "^4.0.2",
    "@economist/component-gobbet": "^4.0.1",
    "@economist/component-google-search": "^3.1.2",
    "@economist/component-icon": "^5.11.1",
    "@economist/component-imagecaption": "^2.0.1",
    "@economist/component-loading": "^2.0.2",
    "@economist/component-navigation": "^6.0.0",
    "@economist/component-picture": "^1.3.0",
    "@economist/component-react-async-container": "^1.3.1",
    "@economist/component-sections-card": "^3.2.1",
    "@economist/component-teaser": "^4.0.0",
    "@economist/component-typography": "^3.1.5",
    "@economist/component-video": "^1.1.1",
    "@economist/connect-api-proxy-middleware": "^1.3.0",
    "@economist/connect-react-html-template": "^1.1.0",
    "@economist/react-i13n-omniture": "^1.4.5",
    "@economist/standard-server": "^1.0.0",
    "babel-polyfill": "^6.7.4",
    "fs-promise": "^0.5.0",
    "http-status": "^0.2.2",
    "isomorphic-fetch": "^2.2.1",
    "lodash.zipobject": "~3.0.0",
    "moment-timezone": "^0.5.3",
    "normalize.css": "^4.1.1",
    "react": "^0.14.8",
    "react-dom": "^0.14.8",
    "react-i13n": "^2.0.13",
    "react-router": "^2.4.1",
    "react-sticky-position": "^2.0.0",
    "serialize-javascript": "^1.1.2",
    "slugger": "^1.0.1",
    "svg4everybody": "^2.0.0",
    "traverse": "^0.6.6",
    "url-pattern": "^1.0.1",
    "urllite": "^0.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "bunyan": "^1.5.1",
    "cssnano": "^3.4.0",
    "envify": "^3.4.0",
    "eslint": "^2.11.1",
    "eslint-config-strict": "^8.5.1",
    "eslint-config-strict-react": "^8.0.1",
    "eslint-plugin-filenames": "^0.2.0",
    "eslint-plugin-react": "^5.0.1",
    "hashmark": "^3.0.0",
    "json": "^9.0.3",
    "mocha": "^2.2.5",
    "node-dir": "^0.1.12",
    "nodemon": "^1.4.0",
    "npm-assets": "^0.1.1",
    "npm-run-all": "^1.7.0",
    "postcss": "^5.0.21",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.5.2",
    "postcss-import": "^8.1.2",
    "postcss-reporter": "^1.3.3",
    "pre-commit": "^1.0.10",
    "stylelint": "^6.0.3",
    "stylelint-config-strict": "^5.0.0",
    "uglifyify": "^3.0.1"
  },
  "pre-commit": [
    "lint"
  ]
}
